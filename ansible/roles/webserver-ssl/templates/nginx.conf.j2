server {
    listen 80;
    listen [::]:80;
    server_name {{ domains | join(' ') if domains is defined else '_' }};
    
{% if ssl_config.provider == 'letsencrypt' and domains is defined %}
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ domains | join(' ') }};
    
    # SSL Configuration (ser√° configurado por Certbot)
    # ssl_certificate /etc/letsencrypt/live/{{ domains[0] }}/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/{{ domains[0] }}/privkey.pem;
{% endif %}
    
    root {{ web_config.document_root }};
    index {{ web_config.index_files | join(' ') }};
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
{% if ssl_config.enable_hsts and ssl_config.provider == 'letsencrypt' %}
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
{% endif %}
    
    # Performance optimizations
{% if nginx_config.enable_gzip %}
    gzip on;
    gzip_vary on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
{% endif %}
    
    client_max_body_size {{ nginx_config.client_max_body_size }};
    keepalive_timeout {{ nginx_config.keepalive_timeout }};
    
    location / {
        try_files $uri $uri/ =404;
    }
    
{% if metrics_config.enable_nginx_exporter %}
    # Metrics endpoint for monitoring team
    location {{ metrics_config.metrics_path }} {
        stub_status on;
        access_log off;
        allow 127.0.0.1;
{% for ip in metrics_config.allowed_monitoring_ips %}
        allow {{ ip }};
{% endfor %}
        deny all;
    }
{% endif %}
}
